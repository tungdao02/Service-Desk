<?xml version="1.0" encoding="utf-8" ?>
     
<odoo>  
      <record id = "helpdesk_ticket_mother_category" model="ir.ui.view">
            <field name="name">view.helpdesk_category.tree</field>
            <field name="model">helpdesk.ticket.mother.category</field>
            <field name="arch" type="xml">
            <tree>
                <field name ="name" string = "Tên danh mục chính"/>
                
            </tree>
            </field>
        </record>

        <record id = "helpdesk_ticket_mother_category_form" model="ir.ui.view">
            <field name="name">view.helpdesk_category.form</field>
            <field name="model">helpdesk.ticket.mother.category</field>
            <field name="arch" type="xml">
            <form>
                <sheet>
                <group>
                    <group>
                        <field name ="name" string = "Tên danh mục chính"/>
                        
                    <field name ="category_ids" string = "Danh mục phụ" widget ="many2many_tags"/>    
                    </group>


                
                  
                </group>
                </sheet>
            </form>
            </field>
        </record>
     </odoo>

