    <record id="crm_phone_ext_number_tree" model="ir.ui.view">
        <field name="name">crm.phone.ext.number.tree</field>
        <field name="model">crm.phone.ext.number</field>
        <field name="arch" type="xml">
            <tree>
                <field name="write_date"/>
                <field name="ext_number" />
                <field name="public_number" />
                <field name="user_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>
    <record id="crm_phone_ext_number_form" model="ir.ui.view">
        <field name="name">crm.phone.ext.number.form</field>
        <field name="model">crm.phone.ext.number</field>
        <field name="arch" type="xml">
            <form string="Ext Number">
                <sheet>
                    <group>
                        <field name="write_date"/>
                        <field name="ext_number" />
                        <field name="user_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="crm_phone_ext_number_action" model="ir.actions.act_window">
        <field name="name">Manage Ext Number</field>
        <field name="res_model">crm.phone.ext.number</field>
        <field name="view_mode">tree,form</field>
    </record>
